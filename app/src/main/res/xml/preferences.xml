<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Notifications">

    </PreferenceCategory>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="prefNotifsMaster"
        android:title="Enable Notifications" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prefNotifsJoin"
        android:summary="Notify when someone requests to join project"
        android:dependency="prefNotifsMaster"
        android:title="On project join" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="prefNotifsSupervisorAccept"
        android:summary="Notify when a supervisor agrees to supervise the project"
        android:dependency="prefNotifsMaster"
        android:title="On supervisor accept" />
    <PreferenceCategory android:title="Security">

    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Change Password" />
</PreferenceScreen>