<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ProposalCreationActivity">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@id/view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".ProposalCreationActivity">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:hint="Title"
                android:inputType="textCapSentences"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextTitle"
                android:layout_marginTop="17dp"
                android:background="@drawable/custom_input"
                android:gravity="top|start"
                android:hint="@string/Description"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:minLines="4"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerSemester"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_below="@id/editTextDescription"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:autofillHints="Semester"
                android:background="@drawable/custom_input"
                android:spinnerMode="dropdown" />

            <View
                android:id="@+id/spinner_overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/spinnerSemester"
                android:layout_alignTop="@id/spinnerSemester"
                android:layout_alignEnd="@id/spinnerSemester"
                android:layout_alignBottom="@id/spinnerSemester" />

            <EditText
                android:id="@+id/editTextYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/editTextSupervisors"
                android:layout_below="@+id/editTextDescription"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/spinnerSemester"
                android:background="@drawable/custom_input"
                android:hint="Year"
                android:inputType="number"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />


            <EditText
                android:id="@+id/editTextSupervisors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerSemester"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_input"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusableInTouchMode="false"
                android:hint="Supervisor(s)"
                android:inputType="textPersonName|textMultiLine"
                android:maxLines="2"
                android:minLines="1"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp" />


            <HorizontalScrollView
                android:id="@+id/scrollViewTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextSupervisors"
                android:layout_marginStart="-16dp"
                android:layout_marginEnd="-16dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/fui_transparent"
                    android:enabled="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:chipSpacing="8dp" />
            </HorizontalScrollView>

            <EditText
                android:id="@+id/editTextTags"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/scrollViewTags"
                android:background="@drawable/custom_input"
                android:hint="Tags"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintEnabled="false" />

            <ImageButton
                android:id="@+id/buttonAddTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editTextTags"
                android:layout_alignEnd="@+id/editTextTags"
                android:layout_alignBottom="@+id/editTextTags"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="13dp"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_check"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/buttonAttachImage"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@id/editTextTags"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/dashed_border"
                android:contentDescription="Attach Image"
                android:drawableTop="@drawable/ic_image"
                android:src="@drawable/ic_image" />


            <HorizontalScrollView
                android:id="@+id/scrollViewImages"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@id/editTextTags"
                android:layout_marginStart="-16dp"
                android:layout_marginEnd="-16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linearLayoutImages"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonAttachImage2"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/dashed_border"
                        android:contentDescription="Attach Image"
                        android:drawableTop="@drawable/ic_image"
                        android:src="@drawable/ic_image" />
                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/shadowView"
        android:layout_width="wrap_content"
        android:layout_above="@id/view"
        android:layout_height="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shadow">
    </View>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">
    </View>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/submit_button"
        android:enabled="false"
        android:text="Submit" />

</RelativeLayout>